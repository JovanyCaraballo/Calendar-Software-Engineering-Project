                if row[2] == self.time: # use if not allowing similar times but allowing similar names
                    event_name = row[0]
                    event_date = row[1] # what if its the same time and name but different dates? - need to account for dates
                    event_time = row[2]
                    print(f'{event_name:20} {event_date:10} {event_time:10}')
            if event_time == None:
                print("does not exists")
                self.invalid()
            else:
                print("DELETE EVENT")

                # CREATE CALENDAR FOR EACH PERSON/CODE OR 1 BIG ONE WITH BLANK INFO UNLESS PROVIDED AND SELECT EVENTS BY CODE
